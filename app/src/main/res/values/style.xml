    <style name="JetAppThemeLight" parent="@android:style/Theme.NoTitleBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/jet_text_default</item>
    </style>

    <style name="JetAppThemeDark" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style_selector</item>
    </style>

    <style name="timeline_moment_big_dot">
        <item name="android:paddingLeft">7.0px</item>
