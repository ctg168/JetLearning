<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="8dp"
    tools:context="com.jet2006.learning.MyTaskFragment" >

    <com.jet2006.controls.RoundProgressBar
        android:id="@+id/prgLearning"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:max="100"
        app:roundColor="#40F4F4F4"
        app:roundProgressColor="#fff"
        app:roundWidth="10dp"
        app:textColor="#fff"
        app:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日建议获取积分22.8分"
        android:textSize="@dimen/jet_text_size_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日建议获取积分22.8分"
        android:textSize="@dimen/jet_text_size_caption" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="75" />

</LinearLayout>